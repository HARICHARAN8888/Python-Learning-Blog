def second_largest(numbers):
    # Check if the list has at least two elements
    if len(numbers) < 2:
        return "List must contain at least two elements."

    # Remove duplicates and sort the list
    unique_numbers = list(set(numbers))

    # Check again if at least two unique numbers exist
    if len(unique_numbers) < 2:
        return "All elements are equal. No second largest element."

    # Sort in descending order
    unique_numbers.sort(reverse=True)

    # Second element in sorted list is the second largest
    return unique_numbers[1]


# Example usage
nums = [10, 20, 4, 45, 99, 99]
print("Second largest element is:", second_largest(nums))
