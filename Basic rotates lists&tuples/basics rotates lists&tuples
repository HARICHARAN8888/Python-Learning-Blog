    def rotate_list_slicing(lst, n):
        n = n % len(lst)  # Handle rotations exceeding list length
        return lst[-n:] + lst[:-n]  # Right rotation

    my_list = [1, 2, 3, 4, 5]
    rotated_right = rotate_list_slicing(my_list, 2)
    print(f"Right rotated list: {rotated_right}") # Output: [4, 5, 1, 2, 3]

    # For left rotation:
    # return lst[n:] + lst[:n]
